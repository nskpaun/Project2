
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/nav_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

                
        <ImageButton
            android:id="@+id/mapicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:background="@null"
            android:onClick="onMapClick"
            android:src="@drawable/mapbuttongrey" />

        <ImageView
            android:id="@+id/demonav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/topthingdemo" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/mainscroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mybanner" >
	        <RelativeLayout
	            android:id="@+id/feedView"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent" >
	        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/mybanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nav_bar"
        android:background="@drawable/bannerwhite" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="265dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/nav_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/seachbox"
        android:cursorVisible="true"
        android:ems="10"
        android:singleLine="true"
        android:textSize="16dp" >

        <requestFocus />
    </EditText>

</RelativeLayout>
